<?xml version="1.0" encoding="utf-8"?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "savne.android.SUA"
        version     = "2.0.0" 
        versionCode = "2" 
		>
    <!-- versionCode es un atributo opcional
		 y solo es utilizado por Android -->
  
  <name>SUA UNAD</name>
  
  <description>Sistema Unificado de Control Academica para la UNAD.</description>
  
  <author href="http://sav-ne.com/" email="oscarricardosan@gmail.com">Oscar Sanchez</author>
  
  <gap:platform name="ios" />
  <gap:platform name="android" />
  
  <preference name="phonegap-version" value="3.7.0" />
  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="true" />
  
  <icon src="images/icon.png" />
  
  <gap:plugin name="org.apache.cordova.file" />
  <gap:plugin name="org.apache.cordova.inappbrowser" />
  
</widget>
