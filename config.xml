<?xml version="1.0" encoding="utf-8"?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "osg.sua.unad_alin"
        version     = "35.5.4"
        versionCode = "38"
  >
    <!-- versionCode es un atributo opcional
		 y solo es utilizado por Android -->
  
  <name>SUA UNAD</name>
  
  <description>Sistema Unificado de Control Academico para la UNAD.</description>
  
  <author href="http://savne.net/" email="oscar.sanchez@savne.net">Oscar Sanchez</author>
  
  <gap:platform name="ios" />
  <gap:platform name="android" />

  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="true" />
  
  <icon src="images/icon.png" />
  
  <!--<gap:plugin name="org.apache.cordova.file" />-->
  <gap:platform name="android" />
  <plugin spec="https://github.com/apache/cordova-plugin-inappbrowser" source="git"/>
  <plugin spec="https://github.com/apache/cordova-plugin-whitelist" source="git"/>




  <access origin="*" />
  <allow-intent href="*" />
  <allow-navigation href="*" subdomains="true" />


</widget>
